{% extends "layout.jinja2" %}

{% block pagestyles %}
  <link href="{{ url_for('static', filename='dist/css/account.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
  <div class="form-wrapper">

    <div class="logo">
      <img src="{{ url_for('static', filename='dist/img/logo.png') }}" alt="logo"/>
    </div>

    {% for message in get_flashed_messages() %}
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{ message }}
      </div>
    {% endfor %}

    <h1>{{ body }}</h1>

    <form method="POST" action="{{ url_for('api_bp.race') }}">
      {{ form.csrf_token }}

      <fieldset class="name">
        {{ form.name.label }}
        {{ form.name(placeholder='John Smith') }}
        {% if form.name.errors %}
          <ul class="errors">
            {% for error in form.email.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="latitude">
        {{ form.latitude.label }}
        {{ form.latitude(placeholder='0.0000') }}
        {% if form.latitude.errors %}
          <ul class="errors">
            {% for error in form.latitude.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="longitude">
        {{ form.longitude.label }}
        {{ form.longitude(placeholder='0.0000') }}
        {% if form.longitude.errors %}
          <ul class="errors">
            {% for error in form.longitude.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="ne_corner">
        {{ form.ne_corner.label }}
        {{ form.ne_corner(placeholder='0.0000') }}
        {% if form.ne_corner.errors %}
          <ul class="errors">
            {% for error in form.ne_corner.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="sw_corner">
        {{ form.sw_corner.label }}
        {{ form.sw_corner(placeholder='0.0000') }}
        {% if form.sw_corner.errors %}
          <ul class="errors">
            {% for error in form.sw_corner.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="boat_type">
        {{ form.boat_type.label }}
        {{ form.boat_type(placeholder='0') }}
        {% if form.boat_type.errors %}
          <ul class="errors">
            {% for error in form.boat_type.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="start_time">
        {{ form.start_time.label }}
        {{ form.start_time(placeholder='0') }}
        {% if form.start_time.errors %}
          <ul class="errors">
            {% for error in form.start_time.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="private">
        {{ form.private.label }}
        {{ form.private(placeholder='0') }}
        {% if form.private.errors %}
          <ul class="errors">
            {% for error in form.private.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <div class="submit-button">
        {{ form.submit }}
      </div>

    </form>

    <div class="login-signup">
      <span>Already have an account? <a href="{{ url_for('auth_bp.login') }}">Log in.</a></span>
    </div>
  </div>
{% endblock %}
