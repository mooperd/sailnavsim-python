{% block content %}
  <h1>{{ body }}</h1>

  {% if current_user.is_authenticated %}

    <p>Hi {{ current_user.name }}!</p>
    <div>
      <table>
        <tr>
          <th>Name</th>
          <th>Boat Type</th>
          <th>Start Time</th>
          <th>Start Location</th>
          <th>Finish Location</th>
          <th>Private</th>
          <th>ID</th>
        </tr>
        <tr>
          <td>{{race.name}}</a></td>
          <td>{{race.boat_type.name}}</td>
          <td>{{race.start_time}}</td>
          <td>{{race.start_location.name}}</td>
          <td>{{race.finish_location.name}}</td>
          <td>{{race.private}}</td>
          <td>{{race.id}}</td>
        </tr>
      </table>
    </div>
  <p>Boats</p>
    {% for message in get_flashed_messages() %}
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{ message }}
      </div>
    {% endfor %}
    <div>
      <form method="POST" action="{{ url_for('api_bp.boat', race_id=race.id )}}">
      {{ form.csrf_token }}
      <table>
        <tr>
          <th>Name</th>
          <th>Owner</th>
          <th>Desired Course</th>
          <th>Started</th>
          <th>ID</th>
        </tr>
        {% for boat in boats %}
        <tr>
          <td>{{boat.name}}</a></td>
          <td>{{boat.user.name}}</td>
          <td>{{boat.desiredCourse}}</td>
          <td>{{boat.started}}</td>
          <td>{{boat.id}}</td>
        </tr>
        {% endfor %}
        <tr>
          <td><fieldset class="boat">
        {{ form.name.label }}
        {{ form.name(placeholder='BoatyMcBoatFace') }}
        {% if form.name.errors %}
          <ul class="errors">
            {% for error in form.email.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>{% endif %}
          </fieldset></td>
            <td></td>
            <td></td>
            <td></td>
            <td><div class="submit-button">{{ form.submit }}</div></td>
        </tr>
      </table>
    </div>
    <a href="{{ url_for('pages_bp.logout') }}">Log out</a>
  {% endif %}

{% endblock %}
